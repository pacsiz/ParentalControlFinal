<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.uniobuda.nik.parentalcontrol" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".CheckService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".CheckPersonActivity"
            android:label="@string/title_activity_check_person" >
        </activity>
        <activity
            android:name=".DeletePersonActivity"
            android:label="@string/title_activity_delete_person" >
        </activity>
        <activity
            android:name=".FilterAppsActivity"
            android:label="@string/title_activity_filter_apps" >
        </activity>
        <activity
            android:name=".SetNewPersonActivity"
            android:label="@string/title_activity_set_new_person" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".PasswordActivity"
            android:label="@string/title_activity_password" >
        </activity>
    </application>

</manifest>
