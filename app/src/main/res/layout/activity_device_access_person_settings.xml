<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hu.uniobuda.nik.parentalcontrol.DeviceAccessSettingsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/btnSaveDeviceAccessSettings"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ffd6d6d6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followingPersonSettings"
        android:id="@+id/followingPersonSettings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/personName"
        android:textStyle="bold"
        android:layout_alignTop="@+id/followingPersonSettings"
        android:layout_alignRight="@+id/checkBoxAccessControlIsEnabled"
        android:layout_alignEnd="@+id/checkBoxAccessControlIsEnabled" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personAccessControlIsEnabled"
        android:id="@+id/textViewAccessControlIsEnabled"
        android:layout_below="@+id/followingPersonSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignRight="@+id/btnSelectDays"
        android:layout_alignEnd="@+id/btnSelectDays" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxAccessControlIsEnabled"
        android:checked="false"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:theme="@style/Theme.AppCompat.Light"
        android:layout_alignBottom="@+id/textViewAccessControlIsEnabled"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:id="@+id/textView2"
        android:layout_below="@+id/textViewAccessControlIsEnabled"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFrom"
        style="@style/Theme.AppCompat.Light"
        android:background="@drawable/edittextstyle"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnSelectDays"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:height="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        android:id="@+id/textView"
        android:layout_above="@+id/editTextFrom"
        android:layout_toRightOf="@+id/followingPersonSettings"
        android:layout_toEndOf="@+id/followingPersonSettings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTo"
        android:background="@drawable/edittextstyle"
        android:layout_alignTop="@+id/editTextFrom"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_toStartOf="@+id/checkBoxAccessControlIsEnabled"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_above="@+id/btnSelectDays"
        style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
        android:width="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectDays"
        android:id="@+id/btnSelectDays"
        android:layout_marginTop="44dp"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_below="@+id/editTextFrom"
        android:layout_centerHorizontal="true"
        android:background="#ffd6d6d6"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

</RelativeLayout>
