<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="hu.uniobuda.nik.parentalcontrol.fragments.HelpScreenFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_deviceAccess_text"
            android:id="@+id/help_deviceAccess_text"
            android:layout_gravity="center|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/help_deviceAccess_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_deviceAccess_text2"
            android:layout_gravity="center"
            android:layout_below="@+id/help_deviceAccess_text"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp" />

      >
    </RelativeLayout>
</ScrollView>